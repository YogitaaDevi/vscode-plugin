{
  "name": "my-extension",
  "displayName": "My Extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "my-extension.showList",
        "title": "Show Styled List"
      },
      {
        "command": "my-extension.refreshList",
        "title": "Refresh List",
        "icon": "$(refresh)"
      },
      {
        "command": "my-extension.createFile",
        "title": "Create File",
        "icon": "$(new-file)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "card-list-sidebar",
          "title": "Card List",
          "icon": "resource/circle-heat-svgrepo-com.svg"
        }
      ]
    },
    "views": {
      "card-list-sidebar": [
        {
          "type": "webview",
          "id": "cardList",
          "name": "Card List",
          "icon": "$(list-tree)",
          "contextualTitle": "Card List"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "my-extension.refreshList",
          "when": "view == styledList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "my-extension.createFile",
          "when": "viewItem == customListItem",
          "group": "inline"
        }
      ]
    },
    "colors": [
      {
        "id": "myExtension.listItemBackground",
        "description": "Background color for the list items",
        "defaults": {
          "dark": "#2D2D2D",
          "light": "#FFFFFF",
          "highContrast": "#000000"
        }
      },
      {
        "id": "myExtension.listItemHoverBackground",
        "description": "Background color for list items when hovered",
        "defaults": {
          "dark": "#3D3D3D",
          "light": "#F0F0F0",
          "highContrast": "#FFFFFF"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "ts-loader": "^9.5.1",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
